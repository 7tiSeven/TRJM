# =============================================================================
# TRJM - Phase 2 Configuration (vLLM + Qwen2.5)
# =============================================================================
# Production-like configuration using local vLLM as LLM provider
# Copy to .env for Phase 2 deployment
# =============================================================================

# Database
DATABASE_URL=postgresql+asyncpg://trjm:trjm_prod_password@postgres:5432/trjm
POSTGRES_USER=trjm
POSTGRES_PASSWORD=trjm_prod_password
POSTGRES_DB=trjm

# LDAP - Real LDAP for production
LDAP_MOCK=false
LDAP_URL=ldaps://ldap.example.com:636
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=service,ou=users,dc=example,dc=com
LDAP_BIND_PASSWORD=your-ldap-bind-password
LDAP_USER_DN_TEMPLATE=uid={username},ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={username})
LDAP_STARTTLS=false
LDAP_CA_CERT_PATH=/certs/ldap-ca.crt

# LLM Provider - vLLM with Qwen2.5-32B-Instruct
LLM_PROVIDER=vllm
LLM_BASE_URL=http://vllm:8000/v1
LLM_API_KEY=not-needed-for-local-vllm
LLM_MODEL=Qwen/Qwen2.5-32B-Instruct
LLM_TIMEOUT=180
LLM_MAX_RETRIES=3

# Security - Generate secure values for production!
# Use: openssl rand -hex 32
JWT_SECRET=generate-secure-random-string-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=8
CSRF_SECRET=generate-another-secure-random-string
CORS_ORIGINS=https://translator.internal.company.com

# Rate limiting - Tighter for production
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_BURST=5
MAX_CONCURRENT_JOBS_PER_USER=2

# Storage
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE_MB=10
RETENTION_HOURS=24

# Application Mode - Production
DEV_MODE=false
LOG_LEVEL=INFO
ENABLE_PII_REDACTION=true

# TLS - Proper certificates for production
TLS_CERT_PATH=/certs/server.crt
TLS_KEY_PATH=/certs/server.key

# Feature Flags
OCR_ENABLED=false
