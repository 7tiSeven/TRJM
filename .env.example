# =============================================================================
# TRJM - Agentic AI Translator Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# See .env.phase1.example for Phase 1 (OpenAI) settings
# See .env.phase2.example for Phase 2 (vLLM) settings
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://trjm:trjm_secure_password@postgres:5432/trjm
POSTGRES_USER=trjm
POSTGRES_PASSWORD=trjm_secure_password
POSTGRES_DB=trjm

# -----------------------------------------------------------------------------
# LDAP Authentication
# -----------------------------------------------------------------------------
# Set LDAP_MOCK=true to use mock authentication for development
LDAP_MOCK=true

# Real LDAP settings (used when LDAP_MOCK=false)
LDAP_URL=ldaps://ldap.example.com:636
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=service,ou=users,dc=example,dc=com
LDAP_BIND_PASSWORD=
LDAP_USER_DN_TEMPLATE=uid={username},ou=users,dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={username})
LDAP_STARTTLS=false
LDAP_CA_CERT_PATH=/certs/ca.crt

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Provider: openai | vllm
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4.1
LLM_TIMEOUT=120
LLM_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate secure random strings for production!
# Use: openssl rand -hex 32
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

CSRF_SECRET=change-this-to-another-secure-random-string
CORS_ORIGINS=https://localhost:3000,https://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_CONCURRENT_JOBS_PER_USER=3

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE_MB=10
RETENTION_HOURS=24

# -----------------------------------------------------------------------------
# Application Mode
# -----------------------------------------------------------------------------
# DEV_MODE=true shows warning banner about external LLM
DEV_MODE=true
LOG_LEVEL=INFO
ENABLE_PII_REDACTION=false

# -----------------------------------------------------------------------------
# TLS Configuration
# -----------------------------------------------------------------------------
TLS_CERT_PATH=/certs/server.crt
TLS_KEY_PATH=/certs/server.key

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
OCR_ENABLED=false
