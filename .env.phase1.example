# =============================================================================
# TRJM - Phase 1 Configuration (OpenAI GPT-4.1)
# =============================================================================
# Development configuration using OpenAI as LLM provider
# Copy to .env for Phase 1 development
# =============================================================================

# Database
DATABASE_URL=postgresql+asyncpg://trjm:trjm_dev_password@postgres:5432/trjm
POSTGRES_USER=trjm
POSTGRES_PASSWORD=trjm_dev_password
POSTGRES_DB=trjm

# LDAP - Mock for development
LDAP_MOCK=true

# LLM Provider - OpenAI GPT-4.1
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4.1
LLM_TIMEOUT=120
LLM_MAX_RETRIES=3

# Security - Development values (change in production!)
JWT_SECRET=dev-jwt-secret-change-in-production-abc123
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
CSRF_SECRET=dev-csrf-secret-change-in-production-xyz789
CORS_ORIGINS=https://localhost:3000,https://127.0.0.1:3000

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_CONCURRENT_JOBS_PER_USER=3

# Storage
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE_MB=10
RETENTION_HOURS=24

# Application Mode - DEV MODE ENABLED
DEV_MODE=true
LOG_LEVEL=DEBUG
ENABLE_PII_REDACTION=false

# TLS - Self-signed certificates for development
TLS_CERT_PATH=/certs/server.crt
TLS_KEY_PATH=/certs/server.key

# Feature Flags
OCR_ENABLED=false
